PORT=5000
FRONTEND_ORIGIN=http://localhost:5173

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT (required for auth)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Admin: create if missing, update password on every server start
# Default: admin@example.com / admin123
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Cloudinary (for product image upload). Get these from https://cloudinary.com/console
# CLOUD_NAME must match exactly the "Cloud name" shown in your Cloudinary dashboard (e.g. "hkdealers" or "dxxxxxx").
CLOUD_NAME=hkdealers
CLOUD_KEY=your_api_key
CLOUD_SECRET=your_api_secret